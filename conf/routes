# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /hello                      controllers.HomeController.hello(name: String)
GET     /:lang/index                controllers.HomeController.lang(lang)

GET     /products                   controllers.InventoryController.products
GET     /product/:label             controllers.InventoryController.product(label: String)
POST    /product                    controllers.InventoryController.addProduct
DELETE  /product/:id                controllers.InventoryController.deleteProduct(id: Int)
PUT     /product/:id/label          controllers.InventoryController.updateLabel(id: Int)
PUT     /product/:id/price          controllers.InventoryController.updatePrice(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
